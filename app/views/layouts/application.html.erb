          <div class="col-md-6">
            <p>  <%=yield%> </p>
          </div>
          <div class="col-md-6">
            <div class = "author">

              <div class = "poster_pic">
                <%= image_tag("img.jpeg") %>
              </div>

              <div class = "poster">
              <p> Posted by: <%=@post.author%> </p>
              </div>

              <p class = "social_media"> Twitter | Facebook | Instagram </p>

              <div class = "advert">
                <%= image_tag("pacers_logo.gif") %>
